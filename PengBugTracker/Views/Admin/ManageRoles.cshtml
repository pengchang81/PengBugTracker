@{
    ViewBag.Title = "ManageRoles";
}
<style>
    .cntrlWide{
        width:100%;
    }
</style>
<h2>ManageRoles</h2>

<div class="row">
    <div class="col-md-6 col-md-offset-3"
        @using (Html.BeginForm())
        {         
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-12">Multi select list</div>
            @Html.ListBox("Users", null, new { @class = "cntrlWide" })
        </div>
        <div class="row">
            <div class="col-md-12">
            @Html.DropDownList("Role", null,"--Select Role--", new { @class = "cntrlWide" })
            </div>
         </div>
        <div class="row">
            <div class="col-md-12">
            <button type="submit" class="btn btn-primary cntrlWide">Submit</button>
            </div>
        </div>
        }

    </div>
</div>

