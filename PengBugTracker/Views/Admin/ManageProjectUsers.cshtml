
@model IEnumerable<PengBugTracker.Models.UserProjectListViewModel>

@{
    ViewBag.Title = "Project Assignments";
}
@*Assigning Project to Managers*@
<h2>Assigning Project to Users</h2>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="col">
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="row">
                                <div class="col-md-12">
                                    <h3>Project Managers</h3>
                                    @Html.DropDownList("ProjectManagerId", null, "--Select--", new { @class = "rolelist" })
                                </div>
                            </div>
                            <hr />
                        }
                        <div class="row">
                            <div class="col-md-12">
                                <h3>Developers</h3>
                                @Html.ListBox("Developers", null, new { @class = "itemlist" })
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-12">
                                <h3>Submitters</h3>
                                @Html.ListBox("Submitters", null, new { @class = "itemlist" })
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-12">
                                <h3>Projects</h3>
                                @Html.ListBox("Projects", null, new { @class = "itemlist" })
                            </div>
                        </div>
                        <div class="col pt-3">
                            <button type="submit" class="btn btn-primary">Assign</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h3>Users</h3>
                <div class="table-responsive">
                    <table id="projects" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th><h4>@Html.DisplayNameFor(model => model.Name)</h4></th>
                                <th><h4>@Html.DisplayName("Projects")</h4></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => item.Name)</td>
                                    <td>
                                        <ul>
                                            @foreach (var name in item.ProjectNames)
                                            {
                                                if (name != "N/A")
                                                {
                                                    <li>@name</li>
                                                }
                                                else
                                                {
                                                    @name
                                                }
                                            }
                                        </ul>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>


@section scripts{

    <script src="~/assets/extra-libs/DataTables/datatables.min.js"></script>

    <script>
        $('#projects').DataTable();
    </script>

}
