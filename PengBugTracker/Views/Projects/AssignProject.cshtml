@model PengBugTracker.Models.Project
@{
    ViewBag.Title = "AssignProject";
}

<h2>AssignProject</h2>

@using (Html.BeginForm("AssignProject", "Projects", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Ticket</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.AssignedToUserId, "Assign Developer", new
            {
                @class = "control-label col-md-2"
            })
            <div class="col-md-10">
                @Html.DropDownList("DeveloperId", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DeveloperId, "", new
                {
                    @class = "text-danger"
                })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
    @*@Html.ActionLink("Assign", "AssignTicket", new { id = model.Id })*@
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
